<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>OneAU Web Application</display-name>
    <servlet>
        <servlet-name>EphemerisServlet</servlet-name>
        <display-name>Ephemeris Servlet</display-name>
        <description>Loads an instance of Ephemeris into the Servlet Context, and remains available to fulfill requests.</description>
        <servlet-class>com.oneau.web.EphemerisServlet</servlet-class>
        <init-param>
            <param-name>ephemeris-data</param-name>
            <param-value>ASCP2000.txt</param-value>
            <description>Comma-separated list of Ephemerides Data File(s)</description>
        </init-param>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MagneticDeclensionServlet</servlet-name>
        <display-name>Magnetic Declension Servlet</display-name>
        <description>Calculates magnetic declension for a given location and date.</description>
        <servlet-class>com.oneau.web.MagneticDeclensionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EphemerisServlet</servlet-name>
        <url-pattern>/ephemeris</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MagneticDeclensionServlet</servlet-name>
        <url-pattern>/magnetic-declension</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jspx</welcome-file>
    </welcome-file-list>
</web-app>
